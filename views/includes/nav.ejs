<style>
    /* Custom Styles */
    .navbar {
        transition: all 0.3s ease;
    }

    .navbar-brand i {
        transition: transform 0.3s ease;
    }

    .navbar-brand:hover i {
        transform: scale(1.1);
    }

    .nav-link {
        position: relative;
        transition: color 0.3s ease;
    }

    .nav-link::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        background: #ff5a5f;
        bottom: 0;
        left: 0;
        transition: width 0.3s ease;
    }

    .nav-link:hover::after {
        width: 100%;
    }

    .nav-link:hover {
        color: #ff5a5f !important;
    }

    .navbar-collapse {
        flex-grow: 0;
        /* Prevent the collapse from taking full width */
    }

    .navbar-nav .nav-item {
        margin: 0 10px;
    }

    .navbar-nav .nav-link {
        font-size: 1.2rem;
        /* Smaller font size for collapsed items */
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
        .navbar-nav {
            flex-direction: column;
            /* Stack items vertically */
            align-items: center;
            /* Center items */
            background-color: white;
            /* Add white background to the toggled menu */
            padding: 10px;
            /* Add some padding for better spacing */
            border-radius: 5px;
            /* Optional: Add rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            /* Optional: Add a subtle shadow */
        }

        .navbar-nav .nav-item {
            margin: 5px 0;
            /* Add spacing between items */
        }

        .navbar-nav .nav-link {
            font-size: 1rem;
            /* Smaller font size for mobile */
        }

        .ms-auto {
            margin-left: 0 !important;
            /* Reset margin for mobile */
        }

        .navbar-toggler {
            border: none;
            /* Remove border from toggler */
        }

        .navbar-toggler:focus {
            box-shadow: none;
            /* Remove focus shadow */
        }
    }
</style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
            <!-- Brand/Logo -->
            <a class="navbar-brand" href="/listings">
                <i class="fa-brands fa-airbnb" style="color: #ff5a5f; font-size: 3rem;"></i>
            </a>

            <!-- Toggler Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links and Search Bar -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Nav Links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/listings">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/listings/new">New Listing</a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    <%if(!currUser) {%>
                        <li class="nav-item">
                            <a class="nav-link" href="/login"><i class="fas fa-sign-in-alt me-2"></i>Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/signup"><i class="fas fa-user-plus me-2"></i>Signup</a>
                        </li>
                        <%}%>
                            <%if(currUser) {%>
                                <li class="nav-item">
                                    <form method="GET" action="/logout">
                                        <button class="nav-link" href="/logout"><i
                                                class="fas fa-sign-out-alt me-2"></i>Logout</button>
                                    </form>
                                </li>
                                <%}%>
                </ul>
            </div>
        </div>
    </nav>